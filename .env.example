# Production environment configuration
# Copy to .env and adjust for your deployment

# Environment
ENVIRONMENT=production

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_TRANSACTIONS=transactions
KAFKA_TOPIC_ALERTS=fraud_alerts
KAFKA_CONSUMER_GROUP=fraud_detector
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_secure_password_here

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fraud_detection
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here

# Spark Configuration
SPARK_MASTER=spark://spark-master:7077
SPARK_APP_NAME=FraudDetector
SPARK_LOG_LEVEL=WARN
SPARK_CHECKPOINT_LOCATION=s3a://lake/checkpoints
SPARK_ENABLE_DELTA=true

# MinIO / S3 Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your_access_key
MINIO_SECRET_KEY=your_secret_key
MINIO_BUCKET=lake
MINIO_USE_SSL=false

# ML Configuration
ML_MODEL_DIR=src/model
ML_MODEL_NAME=isolation_forest
ML_ENABLE=true
ML_BATCH_SIZE=100
ML_MODEL_VERSION=latest

# Monitoring Configuration
MONITORING_PROMETHEUS=true
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Fraud Detection Rules
RULE_HIGH_AMOUNT_THRESHOLD=2000.0
RULE_GEO_VELOCITY_THRESHOLD=800.0
RULE_FREQUENCY_THRESHOLD=10

# Processing Paths
ENABLE_HOT_PATH=true
ENABLE_COLD_PATH=true

# Delta Lake
DELTA_TABLE_PATH=s3a://lake/transactions
